/* miniprogram/pages/my/my.wxss */
.page{
  background-color: rgb(255, 255, 255);
}

.result-bar{
  /* padding: 2rpx 0rpx; */
  background-color: rgb(255, 255, 255);
  border-top: 1rpx solid rgb(255, 255, 255);
  border-bottom: 1rpx solid rgb(255, 255, 255);
}
.my-bar {
  position: relative;
  padding: 8rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: rgb(255, 255, 255);
  border-top: 1rpx solid rgb(255, 255, 255);
  border-bottom: 1rpx solid rgb(255, 255, 255);
}
.my-bar__form {
  margin-top: 5rpx;
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 10rpx;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.my-bar__box {
  position: relative;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.my-bar__input {
  padding-bottom: 5rpx;
  height: inherit;
  line-height: inherit;
  font-size: 85%;
}
.my-bar__hint {
  height: inherit;
  line-height: inherit;
  font-size: 100%;
  color: rgb(199, 148, 52);
  white-space: nowrap;
}

/* 目前没用到了 */
.my-bar__btn {
  margin-left: 10rpx;
  font-size: 100%;
  color: #09BB07;
  white-space: nowrap;
}

.bmi{
  margin-top: 4rpx;
  padding-top: 4rpx;
}

.bmi_value{
  padding-top: 6rpx;
}

.data{
  color: rgb(111, 72, 4);
}

.explanation {
  font-size: 80%;
  font-family: fantasy;
  line-height: 100%;
  display: block;
  margin-top: 10rpx;
  padding: 0rpx 10rpx;
}

.review{
  color: rgb(109, 104, 11);
}

.diet-bar {
  position: relative;
  padding: 8rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: rgb(255, 255, 255);
  border-top: 1rpx solid rgb(255, 255, 255);
}

.ellipsis{
  overflow:hidden;/* 超出一行文字自动隐藏  */
  text-overflow:ellipsis;/* 文字隐藏后添加省略号 */
}

.diet{
  text-align: center;
  color: rgb(172, 168, 143);
  /* font-family: fantasy; */
}
.diet_title{
  color: rgb(79, 68, 34);
}
.dietItem {
  width: 80%;
}
.deleteDiet {
